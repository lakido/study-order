<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.study.ui.controllers.IngredientsInContextMenuScreenController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <TableView fx:id="ingredientModelTableView">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
            </columnResizePolicy>

            <columns>
                <TableColumn fx:id="ingredientNameColumn" text="Name"/>
                <TableColumn fx:id="ingredientCaloriesColumn" text="Calories"/>
                <TableColumn fx:id="ingredientWeightColumn" text="Weight"/>
                <TableColumn fx:id="ingredientRecommendationColumn" text="Recommendation"/>
            </columns>

        </TableView>
    </center>
</BorderPane>