<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.study.ui.screens.IngredientScreen"
            prefHeight="400.0" prefWidth="600.0">

    <VBox>

        <VBox spacing="20">
            <Text text="Name: " VBox.vgrow="NEVER"/>
            <Text fx:id="ingredientName"/>
        </VBox>

        <VBox spacing="20">
            <Text text="Calories: "/>
            <Text fx:id="ingredientCalories"/>
        </VBox>

        <VBox spacing="20">
            <Text text="Weight: "/>
            <Text fx:id="ingredientWeight"/>
        </VBox>

        <VBox spacing="20">
            <Text text="Recommendation: "/>
            <Text fx:id="ingredientRecommendation"/>
        </VBox>

    </VBox>

</AnchorPane>
