<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.study.ui.controllers.MainScreenController"
            fx:id="anchor">
    <ScrollPane>
            <BorderPane fx:id="borderPaneMainScreen">
                <left>
                    <VBox fx:id="menuVBoxMainScreen" spacing="100" alignment="CENTER_LEFT">
                        <padding>
                            <Insets left="20" right="20"/>
                        </padding>

                        <children>
                            <Button fx:id="button1" text="Add Recipe" prefWidth="Infinity" prefHeight="50" onAction="#handleRecipeAddButtonClick">1</Button>
                            <Button fx:id="button2" text="Button 2" prefWidth="Infinity" prefHeight="50">2</Button>
                            <Button fx:id="button3" text="Button 3" prefWidth="Infinity" prefHeight="50">3</Button>
                            <Button fx:id="button4" text="Button 4" prefWidth="Infinity" prefHeight="50">4</Button>
                            <Button fx:id="button5" text="Button 5" prefWidth="Infinity" prefHeight="50">4</Button>
                        </children>
                    </VBox>
                </left>

                <right>
                    <TableView fx:id="startTableWithRecipes" HBox.hgrow="ALWAYS" >
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="recipeNameColumn" text="Recipe Name"/>
                            <TableColumn fx:id="recipePopularityColumn" text="Popularity"/>
                            <TableColumn fx:id="recipeCategoryColumn" text="Category"/>
                            <TableColumn fx:id="recipeAgePreferencesColumn" text="Age_preferences"/>
                        </columns>
                    </TableView>
                </right>
            </BorderPane>
    </ScrollPane>
</AnchorPane>
